{
  "name": "vscode-winccoa-para",
  "displayName": "WinCC OA PARA",
  "description": "WinCC OA Datapoint Type and Datapoint Configuration Editor (PARA Module)",
  "version": "0.1.0",
  "publisher": "winccoa-tools-pack",
  "license": "MIT",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "winccoa-para",
          "title": "WinCC OA PARA",
          "icon": "resources/icons/para.svg"
        }
      ]
    },
    "views": {
      "winccoa-para": [
        {
          "id": "winccoa-para.dptView",
          "name": "Datapoint Types"
        },
        {
          "id": "winccoa-para.dpView",
          "name": "Datapoints"
        }
      ]
    },
    "commands": [
      {
        "command": "winccoa-para.refreshDptTree",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "WinCC OA PARA"
      },
      {
        "command": "winccoa-para.refreshDpTree",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "WinCC OA PARA"
      },
      {
        "command": "winccoa-para.openConfigEditor",
        "title": "Open Config Editor",
        "category": "WinCC OA PARA"
      },
      {
        "command": "winccoa-para.selectProject",
        "title": "Select WinCC OA Project",
        "category": "WinCC OA PARA"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "winccoa-para.refreshDptTree",
          "when": "view == winccoa-para.dptView",
          "group": "navigation"
        },
        {
          "command": "winccoa-para.refreshDpTree",
          "when": "view == winccoa-para.dpView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "WinCC OA PARA",
      "properties": {
        "winccoa-para.projectPath": {
          "type": "string",
          "default": "",
          "description": "Path to WinCC OA project directory. Leave empty for auto-detection."
        }
      }
    }
  },
  "scripts": {
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "rebuild": "electron-rebuild -v 39.3.0",
    "package": "npm run rebuild && vsce package",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.106.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
